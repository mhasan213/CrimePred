<Button>:                                                               #Setting button details for all the buttons

	color: 0,0,0,1.0
	size_hint: 0.5, 0.1
	background_color: (0,128,128,0.2)
	font_name: 'Arial'
	bold: 'bool'
<MyPopup@Popup>:                                                         #For a popup window
    auto_dismiss: False
    Button:
        text: 'Close me!'
        on_release: root.dismiss()




<MyScreenManager>:                                                         #ScreenManager holding all the screens
    FirstScreen:                                                         
    SecondScreen:
    ThirdScreen:
    FourthScreen:
    FifthScreen:
    SixthScreen:
<FirstScreen>:                                                             #Mainmenu and it's details
    name: "Mainmenu"
    Image:                                                                 #For loading image
        source: 'C:\\Users\\pkarn\\PycharmProjects\\CrimePrediction\\wallpaper2.jpg'
        allow_stretch: True
        keep_ratio: False

    FloatLayout:                                                            #FloatLayout for the first screen

        ActionBar:
            background_color: (.18, .5, .95, .5)
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'CrimePred'
                    with_previous: False
                ActionButton:
                    text: 'Change Location'
                    pos_hint: {"center_x": .2, "center_y":0.5}



        Button:
            text: "Crime Rate"
            pos_hint: {"center_x": 0.5, "center_y":0.85}
            on_release: app.root.current = 'second'
        Button:
            text: "Criminals Around You"
            pos_hint: {"center_x": 0.5, "center_y":0.65}
            #on_press: self.parent.ids.text = 'district'
            on_release: app.root.current = 'six'


        Button:
            text: "Probable Suspect"
            pos_hint: {"center_x": 0.5,"center_y":0.45}
            on_release: app.root.current = 'third'
        Button:
            text: "Crime Report"
            pos_hint: {"center_x": 0.5, "center_y":0.25}
            on_release: app.root.current = 'fourth'
        Button:
            text: "Forum"
            pos_hint: {"center_x": 0.5, "center_y":0.05}
            on_release: app.root.current = 'fifth'


<SecondScreen>:                                                     #Crime Rate and it's details
    name: 'second'

    Image:
        source: 'C:\\Users\\pkarn\\PycharmProjects\\CrimePrediction\\wallpaper2.jpg'
        allow_stretch: True
        keep_ratio: False
    FloatLayout:

        Button:
            text: "Crime rate A"
            pos_hint: {"center_x": 0.5, "center_y":0.8}
        Button:
            text: "Crime rate B"
            pos_hint: {"center_x": 0.5,"center_y":0.5}
        Button:
            text: "Return to Main Menu"
            pos_hint: {"center_x": 0.5, "center_y":0.2}
            on_release: app.root.current = 'Mainmenu'
